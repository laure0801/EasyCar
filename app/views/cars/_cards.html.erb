

<div class="card-trip">
  <% @cars.each do |car| %>
     <div class="whole-card">
      <%= link_to car_path(car) do %>
          <%= cl_image_tag car.photo.key, class: "car-image" %>
      <% end %>
    <div class="card-trip-infos">
          <h2 class="card-trip-pricing">
          <%= car.price %> euros
          <%= car.brand %>
          </h2>
     </div>
    </div>
  <% end %>

</div>
